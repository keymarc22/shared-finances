<div data-controller="ui--popover" class="w-full text-right">
  <div class="popover-trigger" data-ui--popover-target="trigger" data-action="click->ui--popover#toggle">
    <%= content_for(:popover_trigger) %>
  </div>

  <div class="popover-wrapper" data-ui--popover-target="wrapper" class="bg-white rounded-md shadow-lg">
    <div
      date-side="bottom"
      data-ui--popover-target="content"
      data-align="center"
      data-state="closed"
      role="dialog"
      class="top-full mt-2 z-50 <%= tw("hidden z-50 rounded-md border bg-popover p-6 text-popover-foreground shadow-md outline-none #{content_for(:popover_content_class)}") %>"
      tabindex=" -1 ">
      <%= content_for(:popover_content) %>
    </div>
  </div>
</div>
