<div data-controller="ui--filter">
  <%= render_card do %>
    <div class="flex items-center">
      <%= content_for :filter_icon %>
      <%= render_input name: "filter", placeholder: "Filter items...", variant: :borderless, class: input_class, data: {"ui--filter-target": "source", action: "input->ui--filter#filter"} %>
    </div>
    <%= render_separator %>
    <div class="<%= options[:class] %>">
      <%= content_tag :div, role: "group", class: 'grid grid-cols-1' do %>
        <% items.each do |item| %>
          <%= list_item(
              name: item[:name],
              value: item[:value],
              selected: item[:selected],
              action: "click->ui--filter#selectItem click->ui--popover#updateText",
              turbo_frame: options[:turbo_frame],
              link: "#{options[:link]}?filter=#{item[:value]}"
            )
          %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
