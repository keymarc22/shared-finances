<div
  class="w-full"
  data-orientation="vertical">
  <div
    data-orientation="vertical"
    class="border-b border-gray-300 st-accordion"
    data-controller="ui--accordion">
    <h3
      data-orientation="vertical"
      class="flex">
      <a
        href="#<%= container %>"
        data-action="ui--accordion#toggle"
        aria-expanded="true"
        data-orientation="vertical"
        data-turbo="false"
        data-state="<%= initial_state %>"
        class="<%= initial_state == 'open' ? 'st-accordion__icon--opened' : '' %> flex flex-1 items-center justify-between py-4 font-medium transition-all hover:underline [&[data-state=open]>svg]:rotate-180">
        <%= title || content_for(:title) %><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-4 w-4 shrink-0 transition-transform duration-200">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </a>
    </h3>
    <div
      data-accordion-id="<%= container %>"
      role="region"
      data-orientation="vertical"
      data-state="<%= initial_state %>"
      class="st-accordion__content overflow-hidden text-sm transition-all data-[state=closed]:hidden data-[state=closed]:animate-accordion-up data-[state=open]:animate-accordion-down">
      <div class="pb-4 pt-0"><%= description || content_for(:description) %></div>
    </div>
  </div>
</div>
