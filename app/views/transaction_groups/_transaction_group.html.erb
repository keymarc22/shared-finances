<%= turbo_frame_tag dom_id(transaction_group) do %>
  <%= render_card(title: transaction_group.name, subtitle: 'Agrupa los gastos para mejor organización de finanzas', class: 'relative') do %>
    <div class="hidden md:block absolute right-3 top-3">
      <a data-action="click -> dropdown#toggle" data-controller="dropdown" class="p0 align-items-center cursor-pointer inline-flex w-full justify-center gap-x-1.5 rounded-md px-3 py-2 text-sm font-semibold text-gray-900" aria-expanded="true" aria-haspopup="true">
        <%= lucide_icon 'more-vertical', class: 'w-6 h-6 text-gray-600' %>
      </a>

      <div class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-hidden" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1" role="none">
          <%= link_to 'Editar', transaction_group_path(transaction_group), class: "block px-4 py-2 text-sm text-gray-700", data: { turbo: false } %>
          <%= link_to 'Eliminar', transaction_group_path(transaction_group), class: "block px-4 py-2 text-sm text-gray-700", data: { 'turbo-method': 'delete', "turbo-confirm": '¿Estas seguro? No se podrá revertir' }  %>
        </div>
      </div>
    </div>

    <div class="md:hidden flex justify-end gap-5 px-6 pb-6">
      <%= link_to transaction_group_path(transaction_group), class: "items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-750 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-gray-950 text-white hover:bg-gray-800 h-10 px-4 py-2", data: { turbo: false } do %>
        <%= lucide_icon 'pencil', class: 'text-white', class: 'text-white', style: 'width: 20px; height: 20px; font-weight: 300' %>
      <% end %>

      <%= link_to transaction_group_path(transaction_group), class: "border border-red-500 items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-750 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:text-white hover:bg-red-800 h-10 px-4 py-2", data: { 'turbo-method': 'delete', "turbo-confirm": '¿Estas seguro? No se podrá revertir' } do %>
        <%= lucide_icon 'trash-2', class: 'text-red-500', style: 'width: 20px; height: 20px; font-weight: 300' %>
      <% end %>
    </div>

    <div class="flex justify-between items-center px-6 pb-6">
      <div class="text-2xl font-bold"><%= to_money_format transaction_group.monthly_expenses %></div>
      <%= render_badge text: "#{transaction_group.expenses_count} gastos registrados" %>
    </div>
  <% end %>
<% end %>