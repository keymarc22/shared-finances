<div data-controller="sidebar">
  <!-- Botón hamburguesa móvil -->
  <button
    data-action="click->sidebar#toggle"
    class="sidebar-mobile-btn">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>
  </button>

  <!-- Overlay -->
  <div
    data-sidebar-target="overlay"
    data-action="click->sidebar#close"
    class="sidebar-overlay"></div>

  <!-- Sidebar -->
  <aside
    data-sidebar-target="sidebar"
    class="sidebar">

    <div class="sidebar-header">
      <div class="sidebar-logo">
        <svg class="sidebar-logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="1" x2="12" y2="23"></line>
          <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
        </svg>
        <span class="sidebar-logo-text">FinanceApp</span>
      </div>
      <button
        data-action="click->sidebar#toggleCollapse"
        class="sidebar-toggle-btn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="11 17 6 12 11 7"></polyline>
          <polyline points="18 17 13 12 18 7"></polyline>
        </svg>
      </button>
    </div>

    <nav class="sidebar-nav">
      <a href="<%= root_path %>" class="sidebar-nav-item sidebar-nav-item-active" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'layout-dashboard' %>
        <span class="sidebar-nav-text">Dashboard</span>
      </a>

      <a href="<%= expenses_path %>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'coins' %>
        <span class="sidebar-nav-text">Expenses</span>
      </a>

      <a href="<%= money_accounts_path%>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'wallet' %>
        <span class="sidebar-nav-text">Accounts</span>
      </a>

      <a href="<%= item_prices_path %>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'store' %>
        <span class="sidebar-nav-text">Price lists</span>
      </a>

      <a href="<%= budgets_path %>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'tag' %>
        <span class="sidebar-nav-text">Budgets</span>
      </a>

      <a href="<%= transaction_groups_path %>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'group' %>
        <span class="sidebar-nav-text">Expense groups</span>
      </a>
    </nav>

    <nav>
      <a href="<%= destroy_user_session_path %>" class="sidebar-nav-item" data-action="click->sidebar#closeOnMobile">
        <%= lucide_icon 'log-out' %>
        <span class="sidebar-nav-text">Logout</span>
      </a>
    </nav>
  </aside>
</div>